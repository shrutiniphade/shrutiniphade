8].

package solution;
public class Solution {
	public static void main(String[]args) {
		int a=3,b=4,c=4;
		if(a*a==b*b+c+c||b*b==a*a+b*b||c*c==a*a+b*b) {
			System.out.println("tringle is pythagorean triplet");
		}else {
			System.out.println("tringle is not pythagoren triplet");
		}
	}
}
O/P=

tringle is not pythagoren triplet

