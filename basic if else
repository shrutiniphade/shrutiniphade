package solution;

public class Solution {
	public static void main(String[]arg) {
		int var=5;
		if(var<10) {
			System.out.println(var+"is less than 10");
		}else if(var>10) {
			System.out.println(var+"is Greateer than 10");
		}else {
			System.out.println(var+"is equal to 10");
		}
	}
}

