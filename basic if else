package solution;

public class Solution{
	public static void main(String[]arg) {
	int var=5;
	if(var<0) {
		System.out.println(var+"is Negative Number");
	}else if(var>0) {
		System.out.println(var+"is Positive Number");
	}else {
		System.out.println(var+"is Neither Positive nor Negative Number");
	}
	};
	
	
}
O/P=
5is Positive Number

